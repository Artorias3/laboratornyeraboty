/*для длинного целого числа N определить, если возможно,
номер двоичного разряда, для которого выполняется условие:
число единичныхъ разрядов справа от него равно числу
единичных разрдов слева от него*/

#include <stdio.h>
#include <stdlib.h>

#define mask1 0x80000000

void print_binary(long num);

int main(void)
{
	long N = 0;
	unsigned int i = 0, mask = 0, cnt = 0;

	printf("enter N = ");
	scanf_s("%d", &N);
	print_binary(N);

	mask = mask1;
	for (i = 0; i < 32; i++)
	{
		if ((N & mask) != 0)
			cnt++;

		mask = mask >> 1;
	}

	if ((--cnt % 2) == 1)
	{
		printf("\nUnable to determine the number of discharge.\n");
		system("pause");
		return 0;
	}
	else
	{
		cnt = cnt / 2;
		mask = mask1;
		for (i = 0; i <= 32; i++)
		{
			if ((N & mask) != 0)
			{
				if (cnt != 0)
					cnt--;
				else
				{
					printf("\nThe number of discharge: %d\n", i);
					break;
				}
			}

			mask = mask >> 1;
		}
	}
	printf("\n");
	system("pause");
	return 0;
}

void print_binary(long num)
{
	int i = 0;
	unsigned int mask = mask1;
	printf("\nbinary N: ");
	for (i = 1; i <= 32; i++)
	{
		if ((num & mask) == 0)
			printf("0");
		else
			printf("1");

		if ((i % 8) == 0)
			printf(" ");

		mask = mask >> 1;
	}
	printf("\n");
	return;
}
